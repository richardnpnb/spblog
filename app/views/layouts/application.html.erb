<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper"> <!-- START OF WRAPPER -->

<header>

<%= link_to image_tag("HNI_logo.png",  alt: "Human Network Intelligence Logo"),
            {:controller => '/pages', :action => 'home'},
            {:class => 'websiteLogo'} %>

<!-- <%= link_to 'Welcome to Human Network Intelligence' , {:controller => '/pages', :action => 'home'},
{:class => 'websiteTitle'} %>
-->

<div id="admin_nav"> 
    <p class="navbar-text pull-right">
    <% if admin_signed_in? %>
      Logged in as <strong><%= current_admin.email %></strong>.
      <%= link_to 'Edit profile', edit_admin_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'  %>
    <% else %>
      <%= link_to "Sign up", new_admin_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Login", new_admin_session_path, :class => 'navbar-link'  %>
    <% end %>
</div>


</header>

<nav id="horzNav">

    <p>
      <%= link_to 'Home', {:controller => '/pages', :action => 'home'} %>
      <%= link_to 'Settings', {:controller => '/articles', :action => 'index'} %>
      <%= link_to 'Reports', {:controller => '/users', :action => 'index'} %>
      <%= link_to 'About', {:controller => '/pages', :action => 'about'} %>
    </p>

</nav>

<main id="content">

<% if notice %> <!-- DEVISE SUGGESTION -->
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</main>

</div> <!-- END OF WRAPPER -->


</body>
</html>
