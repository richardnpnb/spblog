<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper"> <!-- START OF WRAPPER -->

<header>

<%= link_to image_tag("HNI_logo.png",  alt: "Human Network Intelligence Logo"),
            {:controller => 'pages', :action => 'home'},
            {:class => 'websiteLogo'} %>

<%= link_to 'Welcome to Human Network Intelligence' , {:controller => 'pages', :action => 'home'},
{:class => 'websiteTitle'} %>

</header>

<nav id="horzNav">

    <p>
      <%= link_to 'Home', {:controller => 'pages', :action => 'home'} %>
      <%= link_to 'About', {:controller => 'pages', :action => 'about'} %>
      <%= link_to 'Articles', {:controller => 'articles', :action => 'index'} %>
      <%= link_to 'Users', {:controller => 'users', :action => 'index'} %>
    </p>

</nav>

<main id="content">

<%= yield %>

</main>

</div> <!-- END OF WRAPPER -->


</body>
</html>
